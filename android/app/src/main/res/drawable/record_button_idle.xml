<?xml version="1.0" encoding="utf-8"?>
<!-- Idle: white outer circle (80dp) with red inner dot (40dp) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer white circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Inner red dot â€” exactly half the button size, centered -->
    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#EF4444" />
        </shape>
    </item>
</layer-list>
